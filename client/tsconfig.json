{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "allowJs": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "Styles/*": ["styles/*"],
      "Types/*": ["types/*"],
      "Scripts/*": ["scripts/*"],
      "Assets/*": ["assets/*"],
      "Tests/*": ["tests/*"],
      "Hooks/*": ["hooks/*"]
    }
  },
  "include": ["src"]
}
