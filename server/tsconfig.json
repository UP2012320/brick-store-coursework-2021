{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "Utils/*": ["utils/*"],
      "Types/*": ["types/*"]
    }
  },
  "include": ["src"]
}
